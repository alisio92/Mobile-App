<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgIcon"
            android:src="@drawable/house"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Van Den Derpe Straat"
            android:id="@+id/txtAddress"
            android:layout_alignTop="@+id/imgIcon"
            android:textColor="@drawable/list_item_text_selector"
            android:layout_toRightOf="@+id/imgIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lollen Stad"
            android:id="@+id/txtCity"
            android:layout_below="@+id/txtAddress"
            android:layout_alignLeft="@+id/txtAddress"
            android:layout_alignStart="@+id/txtAddress"
            android:textColor="@drawable/list_item_text_selector"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/txtNumber"
            android:layout_alignTop="@+id/txtCity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@drawable/list_item_text_selector"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:id="@+id/txtHomeNumber"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_above="@+id/txtCity"
            android:layout_toEndOf="@+id/txtAddress"
            android:textColor="@drawable/list_item_text_selector"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aantal Kamers:"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/txtNumber"
            android:textColor="@drawable/list_item_text_selector"
            android:layout_toStartOf="@+id/txtNumber" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
