<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.howest.nmct.week5BitCoin.ChangeFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uw bedrag in €"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtBedragEuro"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:numeric="decimal"
        android:text="0"
        android:paddingLeft="10dp" />

    <Button
        style="@style/CustomStyleButton"
        android:drawableLeft="@drawable/arrow_down"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="naar Bitcoin"
        android:id="@+id/btnONBit"
        android:layout_below="@+id/txtBedragEuro"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp" />

    <Button
        style="@style/CustomStyleButton"
        android:drawableLeft="@drawable/arrow_up"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Naar Euro"
        android:id="@+id/btnONE"
        android:layout_alignTop="@+id/btnONBit"
        android:layout_toEndOf="@+id/btnONBit"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uw bedrag in bitcoin"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 bitcoin = 100"
        android:id="@+id/txbRate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:textSize="22dp"
        android:gravity="center" />

    <Button
        style="@style/CustomStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wijzig koers euro - bitcoin"
        android:id="@+id/btnWijzig"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtBedragBitcoin"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:numeric="decimal"
        android:text="0"
        android:layout_toStartOf="@+id/btnONE"
        android:layout_alignEnd="@+id/txtBedragEuro"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="€"
        android:id="@+id/textView5"
        android:layout_above="@+id/btnONBit"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtBedragEuro"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/txtBedragBitcoin"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtBedragBitcoin"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_vertical" />

</RelativeLayout>
