<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Your input:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtHeight"
        android:hint="Your Height"
        android:inputType="numberDecimal"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMass"
        android:hint="Your Mass"
        android:inputType="number"
        android:layout_below="@+id/txtHeight"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btnUpdate"
        android:layout_below="@+id/txtMass"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Your BMI info"
        android:id="@+id/textView2"
        android:textStyle="bold"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignEnd="@+id/txbIndex" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBMI"
        android:minWidth="100dp"
        android:maxWidth="100dp"
        android:maxHeight="300dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Index:"
        android:id="@+id/textView3"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/imgBMI"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/textView4"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp"
        android:layout_below="@+id/txbIndex"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txbIndex"
        android:layout_marginLeft="215dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txbCategory"
        android:layout_marginLeft="215dp"
        style="?android:attr/listSeparatorTextViewStyle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14dp"
        android:scrollHorizontally="false"
        android:layout_alignBottom="@+id/btnUpdate"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
