<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    tools:context="be.howest.nmct.week5BitCoin.BitcoinRateFragment">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1 bitcoin = "
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEuro"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:numeric="decimal"

        android:text="0"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="â‚¬"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/txtEuro"
        android:layout_above="@+id/btnWijzig"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center_vertical" />

    <Button
        style="@style/CustomStyleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wijzigen"
        android:id="@+id/btnWijzig"
        android:layout_below="@+id/txtEuro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
