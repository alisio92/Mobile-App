<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#000000"
    android:id="@+id/row">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtAdres"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtGemeente"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtAdres"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtMaand"
        android:layout_below="@+id/txtAdres"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtControles"
        android:layout_below="@+id/txtGemeente"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aantal Controles:"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/txtControles"
        android:layout_toStartOf="@+id/txtControles"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:textColor="#ffffffff" />
</RelativeLayout>